<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/first_name_pat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="32dp"
                android:layout_marginTop="31dp"
                android:text="First Name" />

            <TextView
                android:id="@+id/last_name_pat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/first_name_pat"
                android:layout_below="@+id/first_name_pat"
                android:text="Last Name" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/first_name_pat"
                android:layout_below="@+id/last_name_pat"
                android:text="Email" />

            <TextView
                android:id="@+id/dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/first_name_pat"
                android:layout_below="@+id/email"
                android:text="Date of Birth" />

            <TextView
                android:id="@+id/marital_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/first_name_pat"
                android:layout_below="@+id/dob"
                android:text="Marital Status" />

            <TextView
                android:id="@+id/sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/first_name_pat"
                android:layout_below="@+id/marital_status"
                android:text="Sex" />

            <TextView
                android:id="@+id/blood_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/first_name_pat"
                android:layout_below="@+id/sex"
                android:text="Blood Type" />

            <TextView
                android:id="@+id/date_modified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/first_name_pat"
                android:layout_below="@+id/blood_type"
                android:text="Date Modified" />

            <TextView
                android:id="@+id/date_created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/first_name_pat"
                android:layout_below="@+id/date_modified"
                android:text="Date Created" />

            <TextView
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/first_name_pat"
                android:layout_below="@+id/date_created"
                android:text="Password" />

            <TextView
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/first_name_pat"
                android:layout_below="@+id/password"
                android:text="User Type" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>